@model Patment.Models.Patient
@{
    ViewBag.Title = "GettingPatientDetails";
}

<h3>Update Patient Details</h3>

<br />

@using (@Html.BeginForm("UpdateConfirmation", "Patient", FormMethod.Post))
{
    @Html.HiddenFor(p => p.PatientID)

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2">First Name</label>
            <div class="col-sm-10">
                @Html.EditorFor(fn => fn.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Last Name</label>
            <div class="col-sm-10">
                @Html.EditorFor(ln => ln.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Date Of Birth</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(db => db.DateOfBirth, new { @class = "form-control"})
            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2">Nhs Number</label>
            <div class="col-sm-10">
                @Html.EditorFor(nhs => nhs.NhsNumber, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </div>

}
