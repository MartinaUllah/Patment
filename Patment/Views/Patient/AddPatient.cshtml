@model Patment.Models.Patient
@{
    ViewBag.Title = "AddPatient";
}

<h2>Add Patient</h2>
<br/>

@using (Html.BeginForm("CreatePatient", "Patient", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2">First Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(fn => fn.FirstName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Last Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(ln => ln.LastName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Date Of Birth</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(db => db.DateOfBirth, new { @class = "form-control", id="pickerDOB" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Nhs Number</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(nhs => nhs.NhsNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <input class="btn btn-success" type="submit" value="Add Patient" />
            </div>
        </div>
    </div>

    <script type="text/javascript">

     $(document).ready(function () {
         $('#pickerDOB').datepicker({
             dateFormat: "dd/M/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-100:+0"
          });

     });
    </script>
}

