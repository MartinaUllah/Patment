@model Patment.Models.Staff
@{
    ViewBag.Title = "AddStaff";
}

<h2>Add Staff</h2>
<br/>

@using (@Html.BeginForm("CreateStaff", "Staff", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2">First Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(fn => fn.FirstName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Last Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(ln => ln.LastName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Start Date</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(sd => sd.StartDate, new { @class = "form-control", id="startDate" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Date of Birth</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(db => db.DateOfBirth, new { @class = "form-control", id="dob" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Staff Type ID</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(sti => sti.StaffTypeID, new { @class = "control-form" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <input class="btn btn-success" type="submit" value="Add Staff" />
            </div>
        </div>
    </div>

    <script type="text/javascript">

     $(document).ready(function () {
         $('#startDate').datepicker({
             dateFormat: "dd/M/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-100:+0"
          });

     });
    </script>

    <script type="text/javascript">

     $(document).ready(function () {
         $('#dob').datepicker({
             dateFormat: "dd/M/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-100:+0"
          });

     });
    </script>
}

