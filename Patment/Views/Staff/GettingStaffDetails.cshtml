@model Patment.Models.Staff
@{
    ViewBag.Title = "GettingStaffDetails";
}

<h2>Update Staff Details</h2>
<br />

@using (Html.BeginForm("UpdateConfirmation", "Staff", FormMethod.Post))
{
    @Html.HiddenFor(si => si.StaffID)

    <div class="form-horizontal">   
        
        <div class="form-group">
            <label class="col-sm-2">First Name</label>
            <div class="col-sm-10">
                @Html.EditorFor(fn => fn.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Last Name</label>
            <div class="col-sm-10">
                @Html.EditorFor(ln => ln.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Start Date</label>
            <div class="col-sm-10">
                @Html.EditorFor(sd => sd.StartDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Date of Birth</label>
            <div class="col-sm-10">
                @Html.EditorFor(db => db.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Staff Type ID</label>
            <div class="col-sm-10">
                @Html.EditorFor(sti => sti.StaffTypeID, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </div>
}
