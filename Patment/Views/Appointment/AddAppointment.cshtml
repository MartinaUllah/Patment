@model Patment.Models.Appointment
@{
    ViewBag.Title = "AddAppointment";
}

<h2>Add Appointment</h2>
<br/>

@using (Html.BeginForm("CreateAppointment", "Appointment", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2">Patient ID</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(pi => pi.PatientID, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Staff</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(s => s.SelectedStaff, Model.Staff, "Please Select", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Appointment Date</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(ad => ad.AppointmentDate, new { @class = "form-control", id = "picker"})
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Appointment Time</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(at => at.SelectedAppointmentTime, Model.AppointmentTimes, "Please Select", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <input class="btn btn-success" type="submit" value="Add Appointment" />
            </div>
        </div>
    </div>

    <script type="text/javascript">

     $(document).ready(function () {
         $('#picker').datepicker({
             minDate: new Date(),
             dateFormat: "dd/M/yy",
             changeMonth: true,
             changeYear: true,
             maxDate: 30
         });

     });
    </script>
}


